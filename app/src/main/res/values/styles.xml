<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorLightBlue</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="InputStyleLogin">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textCursorDrawable">@drawable/bg_rect_cursor_blue</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="InputStyleAmount">
        <item name="android:background">@drawable/bg_input_grey</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textCursorDrawable">@drawable/bg_rect_cursor_blue</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TextNormalBlack">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_rect_blue_rad_10</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonDangerStyle">
        <item name="android:background">@drawable/bg_rect_red_rad_10</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextStyleMethod">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonStyleSelector">
        <item name="android:background">@drawable/selector_bg_btn</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="AlertEditText">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TextHugeBlack">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextNormalGrey">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TextMediumPrimary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TextNormalWhite">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextLargeWhite">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SaldoDetail">
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TextMediumBlack">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
    </style>
</resources>