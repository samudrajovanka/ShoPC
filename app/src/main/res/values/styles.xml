<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorLightBlue</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="TitleInputStyle">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="InputStyleLogin">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="TitleInputStyleNotLogin">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_rect_blue_rad_10</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>